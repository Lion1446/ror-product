<div style="display: flex; justify-content: space-between; align-items: center;">
  <h1>Products</h1>
  <div class="button-container">
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary btn-md', style: 'text-decoration: none; color: white; padding: 0; margin: 0' %>
  </div>
</div>

<div class="table-container">
  <table class="table mt-3">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Price</th>
        <th>Available</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= product.description %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= product.is_available ? 'Yes' : 'No' %></td>
          <td><%= link_to 'View', product, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', remote: true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
